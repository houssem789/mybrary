<div class="container">
  <div class="container">
    <div class="row justify-content-center">
      <h2>Search Books</h2>
    </div>
  </div>

  <form action="/books" method="GET">
    <div class="form-group">
      <label for="title">Title:</label>
      <input
        class="form-control"
        type="text"
        name="title"
        value="<%= searchOptions.title %>"
      />
    </div>
    <div class="form-group">
      <label>Published after</label>
      <input
        class="form-control"
        type="date"
        name="publishedAfter"
        value="<%= searchOptions.publishedAfter %>"
      />
    </div>
    <div class="form-group">
      <label>Published before</label>
      <input
        class="form-control"
        type="date"
        name="publishedBefore"
        value="<%= searchOptions.publishedBefore %>"
      />
    </div>

    <button class="btn btn-primary" type="submit">Search</button>
  </form>
  <div class="form-group">
    <% books.forEach(book => { %>
    <!-- coverImagePath : is a properties that we are going o create that will giv us the real path for the uploaded file ==> Virtual Property-->
    <img height="150" width="100" src="<%= book.coverImagePath %>" />
    <% }); %>
  </div>
</div>
